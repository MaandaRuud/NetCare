@{
    ViewBag.Title = "Doctor Search";
    List<DocWeb.Models.EF.Doctor> Doctors = (List<DocWeb.Models.EF.Doctor>)ViewBag.Doctors;
}

<h3>Doctors Database</h3>
<ul class="breadcrumb">
    <li>Home</li>
</ul>
<div class="row">
    <div class="col-lg-12 text-right">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            @Html.TextBox("search") <button type="submit">Search</button>
        }
    </div>
    <div class="col-md-12 table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Practice No</th>
                    <th>Title</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Discipline</th>
                    <th>Province</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Doctors)
                {
                    <tr>
                        <td>
                            <a href="~/Home/Doctor/@doc.DoctorId">
                                <i class="glyphicon glyphicon-folder-open"></i><span>   </span>
                                @doc.HCPSANo
                            </a>
                        </td>
                        <td>@doc.Title.TitleDescr</td>
                        <td>@doc.Lastname</td>
                        <td>@doc.Firstname</td>
                        <td>@doc.Discipline.DisciplineDescr</td>
                        <td>@doc.Province.ProvinceName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="margin-bottom:50px"></div>